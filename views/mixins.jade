mixin news(srcImgNews,hrefNews,titleNews,author,releaseDate)
    div(class="news")
        div(class="news-img")
            img(src=""+srcImgNews+"" width="196px" height="110px")
        div(class="news-content")
            a(href=""+hrefNews+"")= titleNews
            p=author
            p=releaseDate